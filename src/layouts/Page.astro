---
import '@fontsource/noto-sans';
import faviconImage from '../images/favicon.svg';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={faviconImage.src} />
    <meta name="generator" content={Astro.generator} />
    <title>Kai Yao, Senior Software Engineer</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Avenir";
    src: url("/fonts/avenir.otf") format("otf");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  :root {
    --background-color: #13151a;
    --foreground-color: white;
    --link-color: lightblue;
  }

  html {
    margin: 0;

    font-family: "Noto Sans", system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: 12px;
    line-height: 1.3;

    background: var(--background-color);
    color: var(--foreground-color);
  }

  body {
    margin: 0 2em;
  }

  div,
  p {
    box-sizing: border-box;
  }

  a {
    color: var(--foreground-color);
  }
  a:hover {
    color: var(--link-color);
  }

  main {
    margin: 0 auto;
  }

  ul {
    margin-top: 0;
    margin-bottom: 0;
    padding-left: 1.5em;
  }
  ul > li {
    margin-top: 0.5em;
  }

  h1, h2, h3 {
    font-family: 'Avenir';
    font-weight: 500;
  }

  h1 {
    font-size: 2.4rem;
  }

  h2 {
    display: inline-block;
    margin-top: 1em;

    font-size: 1.4rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }
  header + h2 {
    margin-top: 0.5em;
  }
  h2:has(+ .experience),
  h2:has(+ h3) {
    margin-bottom: 0;
  }

  h3 {
    font-size: 1.2rem;
    margin-top: 1em;
    margin-bottom: 0.2em;
  }
  h4 {
    font-weight: 700;
  }

  p {
    margin-top: 0;
  }
  p:has(+ ul) {
    margin-bottom: 0.5em;
  }

  @media (min-width: 769px) {
    html {
      font-size: 14px;
    }
  }

  @media (min-width: 1025px) {
    html {
      font-size: 16px;
    }

    main {
      max-width: 1024px;
    }
  }

  @media screen {
    html {
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
  }

  @media print {
    :root {
      --background-color: white;
      --foreground-color: black;
    }

    @page {
      /** Only applies in Chrome when using "Default" margin settings */
      margin: 0.25in 0.5in;
    }

    html {
      font-size: 10pt;
    }

    body {
      margin: 0
    }

    main {
      width: 7.5in;
    }

    h1 {
      margin-top: 0.5em;
    }

    a {
      text-decoration: none;
    }

    li {
      break-inside: avoid;
    }
  }
</style>
